<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="start.controllers.EndgameMenuController">
   <children>
      <Label alignment="CENTER" prefHeight="72.0" prefWidth="304.0" text="The game is over">
         <font>
            <Font size="26.0" />
         </font>
         <effect>
            <DropShadow color="#8d0000" />
         </effect>
      </Label>
      <Button fx:id="mainMenuButton" alignment="CENTER" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" text="Main Menu">
         <VBox.margin>
            <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
         </VBox.margin>
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" alignment="CENTER" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" text="Exit">
         <VBox.margin>
            <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
         </VBox.margin>
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="loadGameButton" alignment="CENTER" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" text="Load Game">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
         </VBox.margin>
      </Button>
      <TextField fx:id="scoreField" alignment="CENTER" editable="false" maxWidth="150.0" prefHeight="40.0" prefWidth="150.0">
         <VBox.margin>
            <Insets bottom="20.0" left="80.0" right="80.0" top="20.0" />
         </VBox.margin>
      </TextField>
   </children>
</VBox>
